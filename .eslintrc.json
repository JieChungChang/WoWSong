{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": ["error", "never"],
        "max-len": ["error", { "code": 200 }],
        "indent": ["error", 4, { "MemberExpression": "off"}],
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true } }],
        "camelcase": ["error", {"allow": ["access_token", "access_expired", "client_id", "post_id", "video_id", "follower_account", "member_account", "view_times", "view_token"]}]
    }
}